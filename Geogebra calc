  <!-- Fullscreen Button -->
  <div class="button-container">
    <button id="fullscreenBtn" class="fullscreen-button" onclick="toggleGeoGebraFullscreen()">Enter Fullscreen</button>
  </div>

  <!-- Link to Scientific Calculator -->
